{# Set vars for pagination #}
{% set base_url = page.parent.url %}
{% set pagination = view.collection.params.pagination %}

{# Loop through view #}
{% if view.collection and view.template %}
    {% include view.template ~ '.html.twig' with {'view': view} %}
{% endif %}

{# Pass to pagination if available. #}
{% if pagination|length > 1 %}
    {% include 'partials/pagination.html.twig' with {'base_url': base_url, 'pagination': pagination, 'view': view} %}
{% endif %}